<%= form_for @event, :html => {:class => "form-horizontal", :role => "form", :style=>"padding-left: 25%"} do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'col-sm-3' %>
    <div class="col-sm-9">
      <%= f.text_field :name, :class => 'form-control', :style => 'width: 50%' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :food_type, "Food type (separated by commas)", :class => 'col-sm-3' %><br/>
    <div class="col-sm-9">
      <%= f.text_field :food_type, :class => 'form-control', :style => 'width: 50%' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :location, :class => 'col-sm-3' %>
    <div class="col-sm-9">
      <%= f.text_field :location, :class => 'form-control', :style => 'width: 50%' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_time, :class => 'col-sm-3'%>
    <div class="col-sm-9" style="margin-left: -35px; max-width: 50%">
      <%= f.datetime_select :start_time, {default: Time.now, with_css_classes: true}  %>
    </div>
  </div>
  <%= f.hidden_field :user_id, :value => @user_id %>
  <%= f.submit :class => 'btn btn-primary btn-sm', :style => 'margin-left: -200px' %>
<% end %>