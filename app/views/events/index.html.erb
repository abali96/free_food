<section class="page">
	<div class="home-tint background" style="background-image:url('https://c1.staticflickr.com/5/4055/5134434028_0d3c753733_b.jpg')"></div>
	<div class="row">
		<div class="col-sm-6">
			<br>
			<br>
			<br>
			<br>
			<br>
			<br>
			<br>
			

		<h1 class="homepage-title">WATERLOO FREELOADER</h1>
	
		<p class="slogan-text">
			Connecting students to free food around campus	
		</p>
		<form class="form-inline">
	  <%= form_for @user do |f| %>
	    <div class="phone-number-field">
	    	<div class="form-group">
	<!--     	<div class="input-group-addon">@</div> -->
	      	<%= f.text_field :phone_number, :placeholder => "(519) 555-5555", :class => 'form-control', :style => "height: 50px; width: 435px; font-size: 95%;" %>
	      </div>
	      <%= f.submit "SIGN UP", :class => 'btn btn-primary', :style => "width: 150px; font-size: 70%" %>

	    </div>
	  <% end %>
	  </form>
	</div>

	<div class="col-sm-6">

		<br>
		<br>
		<br>


		<div class='card-container'>
			<% @events.each do |e| %>
				<div class="card">
					<div class="card-content">
						<%= e.name %>
						<br>
						<%= e.food_type %>
						<br>
						Time: <%= e.start_time %>
						<br>
						<% if e.description %>
						Description: <%= e.description.truncate(150) %>
						<% end %>
						<br>
						<%= e.location %>
						<i class="fa fa-map-marker" style="color: #1f43ff"></i>
					</div>
				</div>
			<% end %>
		</div>
	</div>

	</div>


</section>

